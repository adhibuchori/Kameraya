<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kameraya" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorSecondaryContainer">@color/color_primary_darker</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Kameraya" parent="Base.Theme.Kameraya" />

    <!-- Outlined Button Style -->
    <style name="KamerayaOutlinedButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/color_button_stroke</item>
        <item name="android:textAppearance">@style/KamerayaTextViewStyle.BodyMedium</item>
    </style>

    <!-- Round Image View -->
    <style name="RoundImageViewStyle">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundImageViewItemCameraStoreLinearStyle">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <!-- Search Bar Style -->
    <style name="OutlinedSearchBarCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="SearchBarHintTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColorHint">@color/neutral_30</item>
        <item name="fontFamily">@font/plus_jakarta_sans_regular</item>
    </style>

    <style name="OutlinedSearchBarStyle" parent="Widget.Material3.SearchBar.Outlined">
        <item name="shapeAppearanceOverlay">@style/OutlinedSearchBarCorner</item>
        <item name="hintTextAppearance">@style/SearchBarHintTextAppearance</item>
        <item name="strokeColor">@color/neutral_20</item>
    </style>

    <!-- Chip Style -->
    <style name="ChipStyle" parent="KamerayaTextViewStyle.BodyMedium">
        <item name="android:checkable">true</item>
        <item name="fontFamily">@font/plus_jakarta_sans_medium</item>
        <item name="android:textColor">@color/neutral_40</item>
        <item name="chipStrokeColor">@color/neutral_20</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
    </style>

    <!-- Rating Bar Color -->
    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/dusky_yellow</item>
        <item name="colorControlNormal">@color/neutral_30</item>
    </style>

    <!-- Text View Style -->
    <style name="KamerayaTextViewStyle">
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="KamerayaTextViewStyle.DisplaySmall" parent="KamerayaTextViewStyle">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="KamerayaTextViewStyle.HeadlineLarge" parent="KamerayaTextViewStyle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="KamerayaTextViewStyle.HeadlineSmall" parent="KamerayaTextViewStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="KamerayaTextViewStyle.BodyLarge" parent="KamerayaTextViewStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="KamerayaTextViewStyle.BodyMedium" parent="KamerayaTextViewStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="KamerayaTextViewStyle.BodySmall" parent="KamerayaTextViewStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="KamerayaTextViewStyle.TabLayout" parent="KamerayaTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_medium</item>
    </style>

</resources>